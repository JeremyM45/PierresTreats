@{
  Layout = "_Layout";
}
@using PierresTreats.Models
<h1>Welcome to Pierre's Treats</h1>
<p>@Html.ActionLink("See all treats", "Index", "Treats")</p> 
<p>@Html.ActionLink("See all flavors", "Index", "Flavors")</p>
<p>@Html.ActionLink("Account Managment", "Index", "Account")</p>

<div class="row">
  <div class="col-lg-6">
    @if(@Model.Count == 0)
    {
      <p>No Treats Have Been Added Yet</p>
    }
    <h5>Treats</h5>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Name}", "Details", "Treats", new { id = treat.TreatId })</li>
    }
  </div>
  <div class="col-lg-6">
    @if(ViewBag.Flavors.Count == 0)
    {
      <p>No Flavors Have Been Added Yet</p>
    }
    <h5>Flavors</h5>
    @foreach (Flavor flavor in ViewBag.Flavors)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", "Flavors",new { id = flavor.FlavorId })</li>
    }
  </div>
</div>