@{
  Layout = "_Layout";
}
@model PierresTreats.Models.Flavor
<h2>@Html.DisplayFor(model => model.Name) Details</h2>
@if(Model.JoinEntities.Count == 0)
{
  <h4>No Treats Have Been Added</h4>
}
else
{
  <h4>Treats</h4>
  <ul>
    @foreach(var join in Model.JoinEntities)
    {
      <li>@join.Treat.Name</li>
    }
  </ul>
}
<p>@Html.ActionLink("Add A Treat", "AddTreat", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("See All Flavors", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>